# Environment Configuration
# Copy this to .env and fill in your values

# Gemini API Configuration (Phase 2.3)
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Data Collection Settings
COLLECTION_INTERVAL_HIGH=1
COLLECTION_INTERVAL_MEDIUM=5
COLLECTION_INTERVAL_LOW=30
COLLECTION_INTERVAL_VERY_LOW=300

# Storage Settings
DATABASE_PATH=./data/system_stats.db
DATA_RETENTION_DAYS=90

# Privacy Settings
SEND_TO_GEMINI=false
ANONYMIZE_DATA=true

# System Settings
LOG_LEVEL=INFO
MAX_CPU_OVERHEAD=2.0
MAX_RAM_MB=500

# AIDA64 Integration (Optional - for comprehensive temperature monitoring)
# Set to true to enable AIDA64 collector
ENABLE_AIDA64=false

# Use shared memory (faster) or XML report file
# Shared memory requires AIDA64 to be running with shared memory enabled
AIDA64_SHARED_MEMORY=true

# Path to AIDA64 XML report file (only if not using shared memory)
# Example: C:/Temp/aida64_report.xml
AIDA64_REPORT_PATH=

# HWiNFO64 Integration (Optional - FREE alternative to AIDA64)
# Set to true to enable HWiNFO64 collector
# Requires HWiNFO64 to be running with shared memory enabled
ENABLE_HWINFO=false
