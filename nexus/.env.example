# Nexus Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Integration Paths
SENTINEL_DB_PATH=../sentinel/data/system_stats.db
ORACLE_DB_PATH=../oracle/data/patterns.db
SAGE_DB_PATH=../sage/data/conversations.db
GUARDIAN_DB_PATH=../guardian/data/actions.db

